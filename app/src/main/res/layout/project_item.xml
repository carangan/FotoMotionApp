<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/previewItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:longClickable="true"

    android:orientation="vertical"
    android:padding="10dp">
    <!-- Current Thumbnail/Preview of Project -->

    <!-- Text Project View -->
    <ImageView
        android:id="@+id/projectImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="4"
        android:scaleY="4"
        android:layout_centerInParent="true"
        android:src="@mipmap/sailormoon"
        android:contentDescription="Project Image"
        />

    <TextView
        android:id="@+id/projectName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Project Name"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_below="@id/projectImage"/>

    <TextView
        android:id="@+id/authorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:layout_below="@id/projectName"
        android:text="Author Name" />

</RelativeLayout>