<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/previewItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:orientation="vertical"

    android:padding="10dp">
    <!-- Current Thumbnail/Preview of Project -->

    <!-- Text Project View -->
    <ImageView
        android:id="@+id/projectImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="Project Image"
        android:visibility="visible"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/projectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/projectImage"
        android:layout_marginTop="0dp"
        android:gravity="bottom"
        android:text="Project Name"
        android:textColor="#000" />

    <TextView
        android:id="@+id/authorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/projectName"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:text="Project Author" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&#8942;"
        android:textSize="25sp"
        android:layout_toRightOf="@id/projectImage"
        android:id="@+id/txtOptionDigit"

        />
</RelativeLayout>